# This is an example file. Create a .env.local file in the same directory,
# then copy these variables and fill them with your Firebase project's credentials.

# To find these values, go to your Firebase project:
# Project Settings > General (tab) > Your apps (scroll down) > Web app > SDK setup and configuration > Config

NEXT_PUBLIC_USE_FIREBASE=true

NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY_HERE"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_AUTH_DOMAIN_HERE"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID_HERE"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_STORAGE_BUCKET_URL_HERE"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID_HERE"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID_HERE"


# You also need to provide your service account credentials for backend operations like file uploads.
# 1. In your Firebase project, go to Project Settings > Service accounts (tab).
# 2. Click "Generate new private key". A JSON file will be downloaded.
# 3. Open the downloaded JSON file, copy its entire content.
# 4. Paste the entire JSON content between the single quotes below.
# IMPORTANT: This is a secret and should NEVER be shared or committed to version control.
GOOGLE_APPLICATION_CREDENTIALS=''
